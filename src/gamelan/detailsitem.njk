---
layout: layout/base.njk
pagination:
    data: gamelan
    size: 1
    alias: gamelanItem
    addAllPagesToCollections: true
permalink: "gallery/gamelan/items/{{ gamelanItem.nama | slugify }}/details/index.html"
---
<div class="w-full md:h-screen flex flex-col">
    {% include "partials/navbar-logo.njk" %}
    <main class="w-full h-full grow px-4 lg:pl-24 lg:pr-8 pb-4 md:pb-12 flex flex-col md:overflow-y-hidden">
        <div class="item-information flex flex-col md:flex-row items-center md:gap-4 mb-8 h-fit">
            <div class="w-full basis-full md:basis-auto md:w-fit md:max-w-2/4 p-1">
                <h1 class="text-4xl md:text-6xl font-bold item-title leading-[4rem]">GONG</h1>
            </div>
            <!-- Select Box -->
            <div class="p-1 w-full md:w-1/4">
                <div class="select_wrap h-full relative border">
                    <ul class="default_option bg-hijau-keraton border border-hijau-keraton relative cursor-pointer text-white">
                        <li class="p-2">
                            <div class="option">
                                <p class="tracking-widest">sumber bunyi</p>
                            </div>
                        </li>
                    </ul>

                    <ul class="select_ul absolute left-0 top-10 border w-full hidden z-40 bg-white">
                        {% set option = ["informasi umum", "rancak", "sumber bunyi", "elemen pendukung", "keunikan", "catatan"]%}
                        {% for item in option %}
                            <li class="p-2 hover:bg-hijau-keraton hover:text-white cursor-pointer">
                                <div class="option {{item}}">
                                    <p class="tracking-widest">{{item}}</p>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <!-- End Select Box -->
        </div>
        <div class="w-full h-full md:flex md:flex-row-reverse md:items-center md:gap-4 grow md:overflow-y-hidden">
